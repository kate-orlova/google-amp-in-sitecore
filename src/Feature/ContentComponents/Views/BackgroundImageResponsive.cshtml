@using MyFoundation.Extensions

@if (Context.IsAmpRequest())
{
    <amp-img srcset="@(Model.SrcSet)"
             width="@(Model.Width)" height="@(Model.Height)"
             layout="responsive"
             alt="@(Model.Alt)">
    </amp-img>
}
else
{
    <picture role="presentation">
        <img
            data-srcset="@(Model.SrcSet)"
            data-sizes="auto"
            alt="@Model.Alt">
    </picture>
}