@using MyFoundation.Extensions
@model MyFoundation.Models.Image

@if (Context.IsAmpRequest())
{
    <amp-img srcset="@Html.GetResizedSrcSet(Model)"
             width="@(Model.Width)" height="@(Model.Height)"
             layout="responsive"
             alt="@(Model.Alt)">
    </amp-img>
}
else
{
    <picture role="presentation">
        <img data-srcset="@Html.GetResizedSrcSet(Model)"
             data-sizes="auto"
             alt="@Model.Alt">
    </picture>
}