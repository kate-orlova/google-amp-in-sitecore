@inherits Glass.Mapper.Sc.Web.Mvc.GlassView<MyFoundation.Models.YouTubeVideo>
@using MyFoundation.Extensions
@using MyFoundation.Resolvers

@if (Context.IsAmpRequest())
{
    <amp-youtube width="1024"
                 height="768"
                 layout="responsive"
                 data-videoid="@Model.VideoId"
                 @(Model.Autoplay ? "autoplay" : "")>
    </amp-youtube>
}
else
{
    <iframe src="https://www.youtube.com/embed/@(Model.VideoId)?rel=0&showinfo=0@(Model.Autoplay ? "&autoplay=1" : "")" frameborder="0" allowfullscreen=""></iframe>
}

