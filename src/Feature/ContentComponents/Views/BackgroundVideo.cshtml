@using MyFoundation.Extensions
@model Glass.Mapper.Sc.Fields.File

@if (Context.IsAmpRequest())
{
    <amp-video width="1024"
               height="768"
               src="@(Model.Src.ToGeneralUrl())"
               layout="responsive"
               autoplay>
        <div fallback>
            <p>Your browser doesn't support HTML5 video.</p>
        </div>
        <source type="video/mp4" src="@(Model.Src.ToGeneralUrl())">
    </amp-video>
}
else
{
    <video playsinline="" autoplay="" muted="" loop="">
        <source src="@(Model.Src.ToGeneralUrl())">
    </video>
}