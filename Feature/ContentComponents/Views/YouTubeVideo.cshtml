@using MyFoundation.Extensions

@if (Context.IsAmpRequest())
{
    <amp-youtube width="1024"
                 height="768"
                 layout="responsive"
                 data-videoid="YOUR_VIDEO_ID"
                 autoplay>
    </amp-youtube>
}
else
{
    <iframe src="https://www.youtube.com/embed/YOUR_VIDEO_ID?autoplay=1" frameborder="0" allowfullscreen=""></iframe>
}
